<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Dashboard"
    android:background="#dff9fb"
   >

    <ProgressBar
        android:id="@+id/progressBar2"
        style="?android:attr/progressBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/welcome_tv0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="textStart"
            android:textSize="30sp"
            android:padding="10dp"
            android:text="Welcome Back!"
            />

        <TextView
            android:id="@+id/welcome_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="textStart"
            android:textSize="15sp"
            android:paddingHorizontal="23dp"
            android:textStyle="italic"
             />

        <TextView
            android:id="@+id/joke_intro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Quick Joke!"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textSize="20sp"
            android:paddingVertical="5dp"/>

        <TextView
            android:id="@+id/daily_joke"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="15dp"
            android:text=" "
            android:textSize="23sp"
            android:padding="1dp"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/joke_punch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           android:textAlignment="center"
            android:textSize="24sp"
            android:padding="1dp"/>



        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="?android:attr/listDivider"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Filter By Type" />

        <RadioGroup
            android:id="@+id/type_rb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="5dp">

            <RadioButton
                android:id="@+id/rb_gen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="General"
                android:textSize="16sp"/>

            <RadioButton
                android:id="@+id/rb_pro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Programming"
                android:textSize="16sp"
                />


        </RadioGroup>

        <Button
            android:id="@+id/joke_type_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="See Filtered Jokes"
            android:textColor="#fff"
            android:background="@color/btnColor"/>

        <View
            android:id="@+id/divider1"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="?android:attr/listDivider"
            android:layout_marginTop="5dp"/>

        <Button
            android:id="@+id/ten_jokesBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="see 10 random jokes"
            android:textColor="#fff"
            android:background="@color/btnColor"/>

        <Button
            android:id="@+id/logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Logout"
            android:layout_marginTop="5dp"
            android:textColor="#fff"
            android:background="@color/loginBtn"/>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>